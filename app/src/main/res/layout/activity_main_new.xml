<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView android:layout_width="match_parent"
                android:background="@color/ratingBackground"
                android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/rootLayout"
                android:animateLayoutChanges="true"
                android:layout_width="match_parent"
                android:background="@color/ratingBackground"
                android:layout_height="match_parent"
                android:visibility="visible">

            <Button
                    android:text="Hotstar"
                    android:layout_width="0dp"
                    android:textColor="@color/hotstarYellow"
                    android:layout_height="wrap_content"
                    android:id="@+id/btHotstar"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
                    app:layout_constraintStart_toEndOf="@+id/btNetflix" app:layout_constraintHorizontal_bias="0.5"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/tvLaunch"
                    android:textSize="12sp" android:alpha="0.8"/>
            <Button
                    android:text="Netflix"
                    android:layout_width="0dp"
                    android:textColor="@color/netflixRed"
                    android:layout_height="wrap_content"
                    android:id="@+id/btNetflix"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    app:layout_constraintStart_toEndOf="@+id/btPrime"
                    app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btHotstar"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/tvLaunch"
                    android:textSize="12sp" android:alpha="0.8"/>
            <Button
                    android:text="Prime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btPrime"
                    android:textColor="#00A8E1"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    app:layout_constraintStart_toEndOf="@+id/btYoutube" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/btNetflix" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvLaunch"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="32dp" android:textSize="12sp" android:alpha="0.8"/>
            <TextView
                    android:text="@string/app_name"
                    android:layout_width="0dp"
                    android:padding="10dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvHeaderHint"
                    android:textColor="@android:color/white"
                    android:fontFamily="sans-serif-smallcaps" android:textSize="18sp"
                    android:textAlignment="textStart" app:layout_constraintStart_toEndOf="@+id/ivMenu"
                    android:layout_marginStart="24dp" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/ivHelp" android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="@+id/ivMenu"
                    app:layout_constraintBottom_toTopOf="@+id/guideline3" android:layout_marginBottom="24dp"/>

            <ImageView
                    android:layout_width="0dp"
                    android:padding="10dp"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/round_help_24px"
                    android:id="@+id/ivHelp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
                    app:layout_constraintTop_toTopOf="@+id/tvHeaderHint"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:padding="10dp"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/round_menu_24px"
                    android:id="@+id/ivMenu"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="28dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>

            <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/cardBackground"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:elevation="2dp"
                    android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
                    android:id="@+id/cardView"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/guideline3">


                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                            android:text="Hotstar IMDb ratings shown - 22"
                            android:layout_width="0dp"
                            android:alpha="0.8"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                            android:id="@+id/tvHotstartCount2"
                            android:fontFamily="sans-serif-smallcaps" android:textColor="@color/white"
                            android:textAlignment="center" android:layout_marginEnd="8dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tvNetflixCount"
                            android:textSize="12sp"/>
                    <TextView
                            android:text="Amazon Prime Video IMDb ratings shown - 22"
                            android:layout_width="0dp"
                            android:alpha="0.8"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                            android:id="@+id/tvPrimeVideoCount"
                            android:fontFamily="sans-serif-smallcaps" android:textColor="@color/white"
                            android:textAlignment="center" android:layout_marginEnd="8dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/tvHotstartCount2"
                            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="24dp"
                            android:textSize="12sp"/>
                    <TextView
                            android:text="Youtube Ads Skipped - 22"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                            android:id="@+id/tvYoutubeCount" android:layout_marginTop="16dp"
                            app:layout_constraintTop_toBottomOf="@+id/divider_1"
                            android:fontFamily="sans-serif-smallcaps" android:textColor="@color/white"
                            android:textAlignment="center" android:layout_marginEnd="8dp"
                            app:layout_constraintEnd_toEndOf="parent" android:alpha="0.8"/>
                    <TextView
                            android:text="Netflix IMDb Ratings shown - 11"
                            android:layout_width="0dp"
                            android:alpha="0.8"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                            android:id="@+id/tvNetflixCount"
                            android:fontFamily="sans-serif-smallcaps" android:textColor="@color/white"
                            android:textAlignment="center" android:layout_marginEnd="8dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            android:textSize="12sp" android:layout_marginTop="5dp"
                            app:layout_constraintTop_toBottomOf="@+id/tvYoutubeCount"/>
                    <TextView
                            android:text="Total count"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                            android:id="@+id/tvTotalCount2"
                            android:textAlignment="center" android:textSize="18sp"
                            android:textColor="@color/white" android:fontFamily="sans-serif-smallcaps"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintTop_toBottomOf="@+id/tvTotalCount" android:layout_marginBottom="16dp"
                            app:layout_constraintBottom_toTopOf="@+id/divider_1" android:textStyle="bold"/>
                    <TextView
                            android:text="120 / 500"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                            android:id="@+id/tvTotalCount" app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="16dp" android:textAlignment="center" android:textSize="20sp"
                            android:textColor="@color/white" android:fontFamily="sans-serif-smallcaps"
                            android:alpha="0.8"/>

                    <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:alpha="0.8"
                            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                            android:id="@+id/divider_1" app:layout_constraintHorizontal_bias="0.0"
                            android:layout_marginStart="32dp"
                            android:background="@android:color/white" android:layout_marginEnd="32dp"
                            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/tvTotalCount2"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/cardBackground"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:elevation="2dp"
                    android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
                    app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/cardView" android:id="@+id/cardView2"
                    android:visibility="visible">


                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:alpha="0.8"
                            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                            android:id="@+id/divider_5" app:layout_constraintHorizontal_bias="0.0"
                            android:layout_marginStart="32dp"
                            android:background="@android:color/white" android:layout_marginEnd="32dp"
                            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/textView7"/>
                    <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/sbOverlay"
                            android:layout_width="0dp"
                            android:padding="10dp"
                            android:layout_height="wrap_content"
                            android:text="Grant draw over other apps permission"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="24dp" app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="24dp" android:textColor="@color/white"
                            android:fontFamily="sans-serif-smallcaps" android:textAlignment="textStart"
                            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/sbAccessibilityService" android:textSize="12sp"
                            android:alpha="0.8"/>
                    <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/sbAccessibilityService"
                            android:layout_width="0dp"
                            android:padding="10dp"
                            android:layout_height="wrap_content"
                            android:text="Turn on Accessibility Services"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="24dp" app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="24dp" android:textColor="@color/white"
                            android:fontFamily="sans-serif-smallcaps" android:textAlignment="textStart"
                            android:alpha="0.8" android:textSize="12sp"
                            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/divider_5"/>
                    <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/sbBattery"
                            android:layout_width="0dp"
                            android:padding="10dp"
                            android:layout_height="wrap_content"
                            android:text="Add app to whitelist (Optional)"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="24dp" app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="24dp" android:textColor="@color/white"
                            android:fontFamily="sans-serif-smallcaps" android:textAlignment="textStart"
                            app:layout_constraintHorizontal_bias="1.0"
                            android:alpha="0.8" android:textSize="12sp"
                            tools:visibility="visible" app:layout_constraintTop_toBottomOf="@+id/sbOverlay"
                            android:layout_marginTop="8dp"
                            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="24dp"/>
                    <TextView
                            android:text="Turn on all switches"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
                            android:layout_marginStart="16dp" android:id="@+id/textView7"
                            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                            android:textColor="@color/white" android:textAlignment="center" android:textSize="14sp"
                            android:fontFamily="sans-serif-smallcaps"
                            android:textStyle="bold"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


            <androidx.constraintlayout.widget.Guideline
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:layout_constraintGuide_begin="97dp"
                    android:id="@+id/guideline3"/>
            <TextView
                    android:text="Launch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/tvLaunch" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/cardView2" android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp" android:textColor="@color/white" android:textAlignment="center"
                    android:fontFamily="sans-serif-smallcaps" android:textSize="18sp" android:textStyle="bold"/>
            <Button
                    android:text="Youtube"
                    android:layout_width="0dp"
                    android:alpha="0.8"
                    android:textColor="@color/netflixRed"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_height="wrap_content"
                    android:id="@+id/btYoutube"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btPrime"
                    android:layout_marginStart="32dp" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvLaunch" android:textSize="12sp"/>
            <androidx.constraintlayout.widget.Group
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:constraint_referenced_ids="tvLaunch,btYoutube,btPrime,btNetflix,btHotstar"
                    android:id="@+id/launchGroup"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/billingLayout"
            android:animateLayoutChanges="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/ratingBackground"
            tools:context=".MainActivity" android:visibility="gone">

        <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieAnimationBilling"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:lottie_autoPlay="true"
                app:lottie_speed="0.5"
                app:lottie_loop="false"
                app:lottie_fileName="purchase.json"/>
        <TextView
                android:text="@string/thank_you"
                android:layout_width="0dp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:id="@+id/tvThank" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:textColor="@android:color/white" android:textSize="18sp" android:textAlignment="center"
                android:fontFamily="sans-serif-smallcaps"
                app:layout_constraintBottom_toBottomOf="@+id/lottieAnimationBilling"
                android:layout_marginBottom="128dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.navigation.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:menu="@menu/navigation_menu"
            android:layout_gravity="start"
            android:theme="@style/NavigationTheme"
            app:headerLayout="@layout/layout_nav_header"
            android:background="@color/ratingBackground"
            app:itemIconTint="@android:color/white"
            app:itemTextAppearance="@style/navFontStyle"
            app:itemTextColor="@android:color/white"
            android:id="@+id/navigationView">

    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>