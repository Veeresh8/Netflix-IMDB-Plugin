<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:id="@+id/rootLayout">

    <TextView
            android:text="Settings"
            android:layout_width="0dp"
            android:padding="10dp"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="32dp"
            android:layout_marginStart="16dp" android:id="@+id/textView" android:fontFamily="sans-serif-smallcaps"
            android:textColor="@android:color/white" android:textSize="18sp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:textAlignment="center"/>

    <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:alpha="0.8"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/divider_5" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="32dp"
            android:background="@android:color/white" android:layout_marginEnd="32dp"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/textView"/>

    <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/sbYoutube"
            android:layout_width="0dp"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:text="YouTube"
            android:checked="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider_5"
            android:layout_marginEnd="24dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:textColor="@color/white"
            android:fontFamily="sans-serif-smallcaps" android:textAlignment="textStart"
            android:alpha="0.8" android:textSize="12sp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"/>

    <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/sbNetflix"
            android:layout_width="0dp"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:text="Netflix"
            android:checked="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sbYoutube"
            android:layout_marginEnd="24dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:textColor="@color/white"
            android:fontFamily="sans-serif-smallcaps" android:textAlignment="textStart"
            android:alpha="0.8" android:textSize="12sp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"/>

    <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/sbPrime"
            android:layout_width="0dp"
            android:padding="10dp"
            android:checked="true"
            android:layout_height="wrap_content"
            android:text="Amazon Prime Video"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sbNetflix"
            android:layout_marginEnd="24dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:textColor="@color/white"
            android:fontFamily="sans-serif-smallcaps" android:textAlignment="textStart"
            android:alpha="0.8" android:textSize="12sp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"/>

    <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/sbHotstar"
            android:layout_width="0dp"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:text="Hotstar"
            android:checked="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sbPrime"
            android:layout_marginEnd="24dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:textColor="@color/white"
            android:fontFamily="sans-serif-smallcaps" android:textAlignment="textStart"
            android:alpha="0.8" android:textSize="12sp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="32dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>