<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/rootLanguage"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_margin="16dp"
        android:clickable="true"
        android:background="@drawable/language_selector"
        android:orientation="horizontal"
        android:weightSum="1">

    <ImageView
            android:id="@+id/ivFlag"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginStart="32dp"
            android:src="@drawable/se" />

    <TextView
            android:id="@+id/tvLanguageName"
            android:layout_weight="0.9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/montserrat_semibold"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/language_text_color_selector"
            tools:text="Swedish" />

    <ImageView
            android:id="@+id/ivCheck"
            android:visibility="gone"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginStart="32dp"
            android:src="@drawable/baseline_check_24_white" />

</LinearLayout>