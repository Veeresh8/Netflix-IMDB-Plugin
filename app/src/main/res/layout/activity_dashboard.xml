<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Dashboard">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:elevation="4dp"
            android:background="@color/colorPrimary">

        <TextView
                android:id="@+id/tvAppNameHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/alegreya_sans_sc_extrabold"
                android:text="@string/app_name"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/white"
                android:textSize="24sp" />


        <ImageView
                android:id="@+id/ivInfo"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="32dp"
                android:src="@drawable/baseline_info_24" />

    </RelativeLayout>

    <LinearLayout
            android:id="@+id/rlHowDoesItWork"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tvHowDoesItWorkHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/alegreya_sans_sc_extrabold"
                android:text="@string/how_does_it_work"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#000"
                android:textSize="18sp" />

        <TextView
                android:id="@+id/tvHowDoesItWorkSubHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_centerVertical="true"
                android:fontFamily="@font/alegreya_sans_sc_extrabold"
                android:text="@string/how_does_it_work_sub_header"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#4c4c4c"
                android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>