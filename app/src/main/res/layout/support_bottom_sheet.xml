<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ratingBackground"
        android:id="@+id/rootLayout">

    <TextView
            android:text=" Help us keep this app ad-free \n \n If you liked the app, please support it by buying any of the items below"
            android:layout_width="0dp"
            android:padding="10dp"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="32dp"
            android:layout_marginStart="16dp" android:id="@+id/textView" android:fontFamily="sans-serif-smallcaps"
            android:textColor="@android:color/white" android:textSize="18sp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:textAlignment="center"/>
    <Button
            android:text="2$ Donation"
            android:padding="10dp"
            android:textStyle="bold"
            android:background="@color/ratingTitle"
            android:layout_width="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:id="@+id/btnLowDonation"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btnHighDonation"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="32dp"/>
    <Button
            android:text="5$ Donation"
            android:padding="10dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-smallcaps" android:layout_width="wrap_content"
            android:background="@color/ratingTitle"
            android:layout_height="wrap_content"
            android:id="@+id/btnHighDonation"
            app:layout_constraintStart_toEndOf="@+id/btnLowDonation" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>