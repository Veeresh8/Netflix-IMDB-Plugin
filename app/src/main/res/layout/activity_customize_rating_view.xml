<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:background="@color/background"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:id="@+id/linearLayout">

    <TextView
            android:text="Change view timeout"
            android:layout_width="0dp"
            android:alpha="0.9"
            android:padding="10dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:id="@+id/tvChangeRatingTimeout"
            android:textColor="@android:color/white"
            android:textSize="18sp" android:fontFamily="sans-serif-smallcaps"
            android:textAlignment="textStart"
            app:layout_constraintTop_toBottomOf="@+id/divider_2" android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/tvTimeout"/>
    <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:alpha="0.8"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/divider_3" app:layout_constraintHorizontal_bias="0.0" android:layout_marginStart="32dp"
            android:background="@android:color/white" android:layout_marginEnd="32dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/tvTextColor"/>
    <include layout="@layout/rating_view" android:id="@+id/include"/>

    <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:alpha="0.8"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/divider_" app:layout_constraintHorizontal_bias="0.0" android:layout_marginStart="32dp"
            android:background="@android:color/white" android:layout_marginEnd="32dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/tvBackgroundColor"/>
    <TextView
            android:text="Change icon color"
            android:layout_width="0dp"
            android:alpha="0.9"
            android:padding="10dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:id="@+id/tvIconColor"
            android:textColor="@android:color/white"
            android:textSize="18sp" android:fontFamily="sans-serif-smallcaps"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:textAlignment="textStart"
            app:layout_constraintHorizontal_bias="0.0"
            android:drawableEnd="@drawable/round_navigate_next_24px" android:layout_marginTop="39dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTextColor"/>
    <TextView
            android:text="Change text color"
            android:layout_width="0dp"
            android:alpha="0.9"
            android:padding="10dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:id="@+id/tvTextColor"
            android:textColor="@android:color/white"
            android:textSize="18sp" android:fontFamily="sans-serif-smallcaps"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:textAlignment="textStart"
            app:layout_constraintHorizontal_bias="0.0"
            android:drawableEnd="@drawable/round_navigate_next_24px" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:text="Change background color"
            android:layout_width="0dp"
            android:alpha="0.9"
            android:padding="10dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:id="@+id/tvBackgroundColor"
            android:textColor="@android:color/white"
            android:textSize="18sp" android:fontFamily="sans-serif-smallcaps"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:textAlignment="textStart"
            app:layout_constraintHorizontal_bias="0.0"
            android:drawableEnd="@drawable/round_navigate_next_24px" android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toTopOf="@+id/tvTextColor"/>

    <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:alpha="0.8"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/divider_2" app:layout_constraintHorizontal_bias="0.0" android:layout_marginStart="32dp"
            android:background="@android:color/white" android:layout_marginEnd="32dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/tvIconColor"/>
    <TextView
            android:text="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTimeout" android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="@+id/divider_2" android:textSize="18sp"
            android:textColor="@android:color/white" android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="50dp" android:textStyle="bold"
            android:fontFamily="sans-serif-smallcaps"/>

</androidx.constraintlayout.widget.ConstraintLayout>